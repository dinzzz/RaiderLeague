@model IEnumerable<RaiderLeague.Models.Boss>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.bossName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.health)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.damage)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
